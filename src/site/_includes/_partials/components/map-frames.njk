<div class="relative flex justify-between items-end -mx-16">
{%- for i in range(0, 3) -%}
    {% set option = product.options[i] %}
    {% set frame = option.frame %}
    {% set border = 'border-5 border-solid border-transparent' %}

    {% if frame === 'Black' %}
        {% set border = 'border-5 border-solid border-foreground' %}
    {% endif %}

    {% if frame === 'White' %}
        {% set border = 'border-5 border-solid border-background' %}
    {% endif %}

    <label for="{{ frame }}" class="relative flex flex-col items-center w-1/3 text-center mx-16">
        <input type="radio" name="frame" value="{{ frame | lower }}" id="{{ frame | lower }}" class="peer absolute inset-0 w-full h-full bg-transparent border-transparent rounded-0 m-0 z-10 cursor-pointer appearance-none" {% if loop.first %}checked{% endif %} data-map="frame">

        <div class="bg-grey-fade border-1 border-solid border-primary rounded-2 flex justify-center items-center mt-auto mb-8 mx-auto relative w-full peer-checked:bg-secondary">
            <div class="relative ratio-3-2 block bg-transparent rounded-2 {{ border }} w-full"></div>
        </div>

        <span class="block text-xs fvs-sb leading-xs mb-8 text-primary">{{ frame }}</span>

        <span class="block text-xs fvs-rg leading-xs pt-8 border-t-1 border-solid border-grey-border self-center">
        {%- if loop.first -%}
            +&pound;0
        {%- else -%}
            +&pound;35
        {%- endif -%}
        </span>

        <small class="block opacity-0 v-h text-xxs fvs-md leading-xxs bg-secondary mt-8 px-8 text-primary peer-checked:opacity-100 peer-checked:visible" data-map-frame-selected>Selected</small>
    </label>
{%- endfor -%}
</div>
