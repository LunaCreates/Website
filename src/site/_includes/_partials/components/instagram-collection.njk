<section class="container mx-auto my-32 px-16 md:my-56 lg:my-80" aria-labelledby="instagram-collection">
    <h2 class="text-md leading-md fvs-rg text-grey-neutral tracking-3 mt-0 mb-24 text-center uppercase md:mb-40" id="instagram-collection">Follow us on Instagram <a href="{{settings.instagramUrl}}" class="relative inline-block fvs-md before:absolute before:bottom-0 before:left-0 before:w-full before:h-2 before:bg-grey hov:before:w-0 hov:before:transition-width hov:before:duration-300 hov:before:ease-in-out hov:hover:before:w-full">@{{settings.instagramName}}</a></h2>

    <ul class="grid grid-cols-3 gap-16 w-full md:gap-32">
    {% for item in instagramCollection %}
        <li class="relative group">
            {% picture
                item.image,
                '150, 250, 400',
                '(max-width: 37.4375em) 250px, 400px',
                null,
                null,
                'relative block bg-grey-fade ratio-1-1 overflow-hidden',
                'absolute w-full h-full top-0 left-0 object-cover transition-transform duration-500 ease-in-out hov:group-hover:scale-110'
            %}

            <a class="absolute top-0 right-0 bottom-0 left-0 opacity-0" href="https://www.instagram.com/lunacreatesdesign/">View more images on our Instagram</a>
        </li>
    {% endfor %}
    </ul>
</section>
