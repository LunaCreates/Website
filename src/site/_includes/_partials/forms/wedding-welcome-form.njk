{% set variant = product.options[0] %}

<form class="mt-24" data-product-form>
    <input type="hidden" name="cartId" value="" />
    <input type="hidden" name="variantId" value="{{ variant.id }}" />

    <div class="relative mb-32">
        <label for="couple-names" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Names of Happy Couple</label>
        <input type="text" name="couple names" class="text-base leading-base fvs-rg block py-8 px-16 text-grey-neutral border-1 border-solid border-grey-border rounded-4 w-full" placeholder="E.g. Mark &amp; Sarah" id="couple-names" required>
    </div>

    <div class="relative mb-32">
        <label for="table-date" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Date of Wedding</label>
        <input type="text" name="wedding date" class="text-base leading-base fvs-rg block py-8 px-16 text-grey-neutral border-1 border-solid border-grey-border rounded-4 w-full" placeholder="e.g. 25th December 2020" id="table-date" required>
    </div>

    <div class="relative mb-32">
        <label for="wedding-location" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Location</label>
        <input type="text" name="wedding location" class="text-base leading-base fvs-rg block py-8 px-16 text-grey-neutral border-1 border-solid border-grey-border rounded-4 w-full" placeholder="E.g. Windsor Castle, Windsor, SL4 1NJ" id="wedding-location" required>
    </div>

    <div class="relative mb-32">
        <label for="table-colour" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Colour Theme</label>
        <div class="relative">
            <select name="color theme" id="table-colour" class="text-base leading-base fvs-rg block py-8 pr-32 pl-16 text-grey-neutral w-full border-1 border-solid border-grey-border bg-transparent rounded-4 appearance-none" required>
                <option value="Navy Blue">Navy Blue</option>
                <option value="Blush Pink">Blush Pink</option>
                <option value="Platinum Grey">Platinum Grey</option>
                <option value="Mint">Mint</option>
                <option value="Olive Green">Olive Green</option>
                <option value="*Email for bespoke colour*">*Email for bespoke colour*</option>
            </select>
            <svg class="absolute top-1/2 right-8 rotate-90 -translate-x-1/2 -translate-y-1/2 pointer-events-none" width="24" height="24" aria-hidden="true">
                <use xlink:href="/icons/sprite.svg#chevron"></use>
            </svg>
        </div>
    </div>

    <div class="relative mb-32">
        <label for="quantity" class="text-sm leading-sm fvs-md inline-block mb-8 text-tertiary">Quantity</label>
        <input type="number" id="quantity" name="quantity" value="1" min="1" inputmode="numeric" class="text-base leading-base fvs-rg block py-8 px-16 text-grey-neutral border-1 border-solid border-grey-border rounded-4 w-1/4" pattern="[0-9]*">
    </div>

    <button type="submit" class="bg-secondary text-foreground text-xs leading-xs fvs-md py-16 px-24 rounded-5 uppercase tracking-1 outline-transparent focus:outline-primary hov:hover:bg-hover-secondary">Add to basket</button>
</form>
